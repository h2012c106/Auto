<body class="user-select">
  <header class="header">
    <nav class="navbar navbar-default" id="navbar">
      <div class="container">
        <%- include('../components/header'); %>
      </div>
    </nav>
  </header>
  <section class="container">
    <div class="content-wrap">
      <div class="forum-wrapper content">
        <h3 class="post-title"><%= title %></h3>
        <div class="posts-wrapper">
          <% replyArr.forEach(function(r){%>
            <div class="post-wrapper">
              <div class="user-part">
                <div class="user-info"><%= r.userInfo.userName %></div>
                <div class="user-info user-type"><%= r.userInfo.userType %></div>
              </div>
              <div class="text-part">
                <div class="reply"><%- r.reply %></div>
                <div class="reply-footer">
                  <span class="reply-info"><%= r.time %></span>
                  <span class="reply-info">#<%= r.floor %></span>
                  <span class="reply-info want-reply" data-userName="<%= r.userInfo.userName %>">回复</span>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
        <div class="comment-wrapper">
          <form id="comment-form">
            <label>回复:</label>
            <textarea name="reply" wrap="virtual" class="form-control publish-input"></textarea>
            <div class="publish-btn-wrapper">
              <span class="btn btn-default btn-publish" id="forum-publish-btn">发表</span>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <%- include('../components/sidebar'); %>

  </section>
  <footer class="footer">
    <div class="container">
      <%- include('../components/footer'); %>
    </div>
    <div id="gotop"><a class="gotop"></a></div>
  </footer>
  <script src="/js/extern/bootstrap.min.js"></script>
  <script src="/js/extern/jquery.ias.js"></script>
  <script src="/js/extern/scripts.js"></script>
  <script src="/js/extern/bootstrap-dialog.min.js"></script>
  <script src="/js/tools.js"></script>
  <script src="/js/header.js"></script>
  <script src="/js/sidebar.js"></script>
  <script src="/js/forum-detail.js"></script>
</body>

</html>