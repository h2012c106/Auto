<body class="user-select">
  <header class="header">
    <nav class="navbar navbar-default" id="navbar">
      <div class="container">
        <%- include('../components/header'); %>
      </div>
    </nav>
  </header>
  <section class="container">
    <div class="content-wrap">
      <div class="table-wrapper user-table">
        <div class="panel panel-default">
          <div class="panel-heading">总计<%= allUser.length %>条项目</div>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="text-center" scope="col">#</th>
                <th class="text-center" scope="col">用户名</th>
                <th class="text-center" scope="col">用户类型</th>
                <th class="text-center" scope="col">选择</th>
              </tr>
            </thead>
            <tbody>
              <% allUser.forEach(function(u, index){%>
                <% if (u.userId === userInfo.user.userId) { %>
                    <tr>
                        <th class="text-center" scope="row"><%= index %></th>
                        <td class="text-center"><%= u.userName %></td>
                        <td class="text-center">
                            <select name="userType" class="form-control usertype-select" disabled>
                                <% if (u.userType === 'norm') { %>
                                    <option value="norm" selected>普通用户</option>
                                    <option value="media">媒体</option>
                                    <option value="sup">管理员</option>
                                <% } else if (u.userType === 'media') { %>
                                    <option value="norm">普通用户</option>
                                    <option value="media" selected>媒体</option>
                                    <option value="sup">管理员</option>
                                <% } else if (u.userType === 'sup') { %>
                                    <option value="norm">普通用户</option>
                                    <option value="media">媒体</option>
                                    <option value="sup" selected>管理员</option>
                                <% } %>
                            </select>
                        </td>
                        <td class="text-center"><input type="checkbox" data-userId="<%= u.userId %>" disabled></td>
                    </tr>
                <% } else { %>
                    <tr>
                        <th class="text-center" scope="row"><%= index %></th>
                        <td class="text-center"><%= u.userName %></td>
                        <td class="text-center">
                            <select name="userType" class="form-control usertype-select">
                                <% if (u.userType === 'norm') { %>
                                    <option value="norm" selected>普通用户</option>
                                    <option value="media">媒体</option>
                                    <option value="sup">管理员</option>
                                <% } else if (u.userType === 'media') { %>
                                    <option value="norm">普通用户</option>
                                    <option value="media" selected>媒体</option>
                                    <option value="sup">管理员</option>
                                <% } else if (u.userType === 'sup') { %>
                                    <option value="norm">普通用户</option>
                                    <option value="media">媒体</option>
                                    <option value="sup" selected>管理员</option>
                                <% } %>
                            </select>
                        </td>
                        <td class="text-center"><input type="checkbox" data-userId="<%= u.userId %>"></td>
                    </tr>
                <% } %>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="quatre-btn-wrapper">
          <span class="btn btn-default btn-tool" id="all-check-btn">全选</span>
          <span class="btn btn-default btn-tool" id="anti-check-btn">反选</span>
          <span class="btn btn-default btn-good" id="user-alt-btn">更改权限</span>
          <span class="btn btn-default btn-bad" id="user-kill-btn">删除</span>
        </div>
      </div>
    </div>
  </section>
  <footer class="footer">
    <div class="container">
      <%- include('../components/footer'); %>
    </div>
    <div id="gotop"><a class="gotop"></a></div>
  </footer>
  <script src="/js/extern/bootstrap.min.js"></script>
  <script src="/js/extern/jquery.ias.js"></script>
  <script src="/js/extern/scripts.js"></script>
  <script src="/js/extern/bootstrap-dialog.min.js"></script>
  <script src="/js/tools.js"></script>
  <script src="/js/header.js"></script>
  <script src="/js/admin-setting.js"></script>
</body>

</html>