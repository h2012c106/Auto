<% if (picNews.length > 0) { %>
  <div id="focusslide" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% picNews.forEach(function(n, index){%>
        <% if (index === 0) { %>
          <li data-target="#focusslide" data-slide-to="<%= index %>" class="active"></li>
        <% } else { %>
          <li data-target="#focusslide" data-slide-to="<%= index %>"></li>
        <% } %>
      <% }) %>
    </ol>
    <div class="carousel-inner" role="listbox">
      <% picNews.forEach(function(n, index){%>
        <% if (index === 0) { %>
          <div class="item carousel-item active">
            <a href="<%= n.newsUrl %>" title="<%= n.title %>">
              <img src="<%= n.picUrl %>" alt="<%= n.title %>" class="img-responsive slide-img">
            </a>
          </div>
        <% } else { %>
          <div class="item carousel-item">
            <a href="<%= n.newsUrl %>" title="<%= n.title %>">
              <img src="<%= n.picUrl %>" alt="<%= n.title %>" class="img-responsive slide-img">
            </a>
          </div>
        <% } %>
      <% }) %>
    </div>
    <a class="left carousel-control" href="#focusslide" role="button" data-slide="prev" rel="nofollow"> <span class="glyphicon glyphicon-chevron-left"
        aria-hidden="true"></span> <span class="sr-only">上一个</span> </a>
    <a class="right carousel-control" href="#focusslide" role="button" data-slide="next" rel="nofollow"> <span class="glyphicon glyphicon-chevron-right"
        aria-hidden="true"></span>
      <span class="sr-only">下一个</span> </a>
  </div>
<% } %>